<div class="page-header">
  <h1><%= @plugin.name %></h1>
</div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Host</th>
      <th>Port</th>
      <th>Output</th>
    </tr>
  </thead>
  <tbody>
    <% @plugin.nessus_results.each do |result| %>
    <tr>
      <td><%= result.ip_address.to_s %></td>
      <td>
        <% result.ports.each do |port, details| %>
          <%= port %>
        <% end %>
      </td>
      <td>
        <%= simple_format result.output %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>